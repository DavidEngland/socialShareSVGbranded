<!-- This file is used to markup the public-facing widget. -->

<div class="{{@root.widget}}-widget {{@root.slug}}">
  <div class="container">
    <div class="row-fluid">
      <div class="span12">
        <div class="btn-toolbar">
          {{#each popups}}
            <div class="btn-group">
              <a class="btn {{@root.class}} {{class}}" title="{{preamble}} {{name}}" href="javascript:void(0)">
                <i class="{{@root.prefix}}{{class}}"></i>
              </a>
            </div>
           {{/each}}
          <div class="btn-group">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
